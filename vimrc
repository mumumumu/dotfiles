" Necessary for lots of cool vim things
set nocompatible

" file/command completion
set wildmenu
set wildmode=list:longest

" case-smart searching
set ignorecase
set smartcase

" set terminal title
set title

" maintain more context around cursor
set scrolloff=3

" limited line numbering
set ruler

" highlight search terms
set hlsearch
set incsearch

" syntax highlighting
filetype on
filetype plugin on
syntax on

" tabs
set ts=2
set expandtab
set smarttab
set shiftwidth=2

set softtabstop=2
